import sys

if len(sys.argv) < 2:
    print("Usage: {} KEYWORD", file=sys.stderr)
    sys.exit(1)   # エラー終了（0 以外）

keyword = sys.argv[1]
line_num = 0
piece_num =0

for line in sys.stdin:
    line_num += 1
    if keyword in line:
        piece_num += 1
        print(f"{piece_num},{line_num}", end="\n")
